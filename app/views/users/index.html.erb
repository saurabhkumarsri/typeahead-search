<%= turbo_frame_tag "don" do%>
<table id="customers">
		<thead>
			<tr>
				<th>Fname</th>
				<th>Lname</th>
				<th>Phone</th>
				<th>Email</th>
				<th>Role</th>
			</tr>
		</thead>
		<tbody>
			<% @users.each do |d| %>
			<tr data-filter-dropdown-target="<%= d.role.downcase %>" data-target="search.filterableRow">
				<td><%= d.fname %></td>
				<td><%= d.lname %></td>
				<td><%= d.phone %></td>
				<td><%= d.email %></td>
				<td><%= d.role %></td>
			</tr>
			<% end %>
		</tbody>
	</table>
  <%end%>

</div>